set -e

url=$1

if [ -z "$url" ]
then
    echo $0: Too few arguments >&2
    echo Usage: $0 HAPROX_CSV_URL >&2
    echo Example: $0 http://web.isvtec.com/haproxy_stats\;csv >&2
    exit 1
fi

error=0
for host in $(wget -q -O- "$url" | awk -F, '$18~/DOWN/ {print $2}')
do
    error=1
    echo -n "$host down. "
done

if [ $error = 1 ]
then
    echo
    exit 2
fi

echo OK
exit 0
