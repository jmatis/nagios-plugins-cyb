set -e

# Set default RBLs, can be overriden in the config file
dnsbls='
    sbl.spamhaus.org
    xbl.spamhaus.org
    pbl.spamhaus.org
    zen.spamhaus.org
    bl.spamcop.net
    cbl.abuseat.org
    b.barracudacentral.org
    ips.backscatterer.org
    opm.tornevall.org
    '

conffile="/etc/nagios-plugins/config/rbl.conf"
if [ -f "$conffile" ]
then
    . "$conffile"
fi

critical=0

# Get all IPs except RFC1918 and RFC1700
ip_list=$(ip a | awk -F ' *|/' '/inet / {print $3}' |
    grep -vE '^(127|10|192\.168|172\.1[6789]|172\.2[0-9]|172\.3[01])\.' || true)

for ip in $ip_list
do
    revip=$(echo $ip | awk -F. '{print $4"."$3"."$2"."$1}')

    for dnsbl in $dnsbls
    do

	if host -W 1 $revip.$dnsbl > /dev/null 2>/dev/null
	then
	    echo -n "$ip blacklisted by $dnsbl "
	    critical=1
	fi
    done
done

if [ $critical = 1 ]
then
   echo
   exit 2
fi

echo "OK"
exit 0
