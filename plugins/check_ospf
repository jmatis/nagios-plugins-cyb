set -e
set -o pipefail

export VTYSH_PAGER=cat

init_routes=$(echo 'show ip ospf neigh' | vtysh ospf | grep -c Init/)

if [ "$init_routes" -gt 0 ]
then
    echo -n "$init_routes routes are in Init state: "
    echo 'show ip ospf neigh' | vtysh ospf | tr "\n" '.'
    exit 2
fi

echo "$init_routes are in Init state"
exit 0
